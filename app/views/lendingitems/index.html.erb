<p id="notice"><%= notice %></p>

<h1>貸出し商品登録</h1>

<table>
  <thead>
    <tr>
      <th>JANコード</th>
      <th>商品名</th>
      <th>カテゴリー名</th>
      <th>商品画像</th>
      <th>金額</th>
      <th>貸出し日数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lendingitems.each do |lendingitem| %>
      <tr>
        <td><%= lendingitem.jancode %></td>
        <td><%= lendingitem.item %></td>
        <td><%= lendingitem.category %></td>
        <td><%= lendingitem.image_name %></td>
        <td><%= lendingitem.price %></td>
        <td><%= lendingitem.days %></td>
        <td><%= lendingitem.memo %></td>
        <td><%= link_to '確認', lendingitem %></td>
        <td><%= link_to '変更', edit_lendingitem_path(lendingitem) %></td>
        <td><%= link_to '削除', lendingitem, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

